<div class="container-fluid pt-4 px-4" id="form_AddNewCate">
  <div class="col-sm-12 col-xl-6"></div>
  <div class="bg-secondary rounded h-100 p-4">
    <h6 class="mb-4">Danh sách Khách hàng</h6>
    <div class="table-wrapper-scroll-y my-custom-scrollbar">
      <table class="table table-hover table-bordered table-striped mb-0">
        <thead>
          <tr>
            <th scope="col">STT</th>
            <th scope="col">Tên đăng Nhập</th>
            <th scope="col">Tên KH</th>
            <th scope="col">Email</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Số điện thoại</th>
          </tr>
        </thead>
        <tbody id="list_Customer"></tbody>
      </table>
    </div>
  </div>
  <div class="row g-4">
    <div class="col-sm-12 col-xl-6 p-4">
      <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Thêm mới</h6>
        <div class="mb-3">
          <label for="customerUsername" class="form-label">Tên đăng nhập</label>
          <input type="text" class="form-control" id="customerUsername" />
        </div>
        <div class="mb-3">
          <label for="customerPassword" class="form-label">Mật khẩu</label>
          <input type="text" class="form-control" id="customerPassword" />
        </div>
        <div class="mb-3">
          <label for="customerName" class="form-label">Tên</label>
          <input type="text" class="form-control" id="customerName" />
        </div>
        <div class="mb-3">
          <label for="customerEmail" class="form-label">Email</label>
          <input type="email" class="form-control" id="customerEmail" />
        </div>
        <div class="mb-3">
          <label for="productAddress" class="form-label">Địa chỉ</label>
          <input type="text" class="form-control" id="productAddress" />
        </div>
        <div class="mb-3">
          <label for="productPhoneNumber" class="form-label"
            >Số điện thoại</label
          >
          <input type="text" class="form-control" id="productPhoneNumber" />
        </div>
        <div class="mb-3">
          <label for="formFile" class="form-label">Hình ảnh</label>
          <input class="form-control bg-dark" type="file" id="hinhsp" />
        </div>
        <img
          id="ImgCustomerNew"
          data-src="holder.js/100px250"
          class="img-fluid"
          alt="100%x250"
          style="height: 250px; width: 100%; display: block"
          src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22778%22%20height%3D%22250%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20778%20250%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_182d97126e5%20text%20%7B%20fill%3Argba(255%2C255%2C255%2C.75)%3Bfont-weight%3Anormal%3Bfont-family%3AHelvetica%2C%20monospace%3Bfont-size%3A39pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_182d97126e5%22%3E%3Crect%20width%3D%22778%22%20height%3D%22250%22%20fill%3D%22%23777%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%22289.234375%22%20y%3D%22142.4%22%3E778x250%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E"
          data-holder-rendered="true"
        />
        <!-- <input
                      type="button"
                      class="btn btn-primary"
                      id="btn_Add_New_Cate"
                      value="Thêm mới"/> -->
        <button
          type="button"
          class="btn btn-outline-primary m-2"
          id="btn_Add_New_Customer"
        >
          Thêm mới
        </button>
        <input type="hidden" id="file_ImageCustomer" />
        <img id="ImgCustomerNew" width="100px" src="" />
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    var url = "http://localhost:3000";

    function loadCustomer() {
      $.post(url + "/customer", function (data2) {
        if (data2.kq == 1) {
          $("#list_Customer").html("");
          var STT = 0;
          data2.CustomerList.forEach(function (customer) {
            console.log(customer);
            STT++;
            $("#list_Customer").append(
              `
              <tr class="customer" srcHinh="` +
                customer.Image +
                `" customerID="` +
                customer._id +
                `" customerUsername1="` +
                customer.Username +
                `"
                customerName1="` +
                customer.Name +
                `"
                customerEmail1="` +
                customer.Email +
                `"
                customerAddress1="` +
                customer.Address +
                `"
                customerPhoneNumber1="` +
                customer.PhoneNumber +
                `">
                  <td>` +
                STT +
                `</td>
                  <td>` +
                customer.Username +
                `</td>
                  <td>` +
                customer.Name +
                `</td>
                  <td>` +
                customer.Email +
                `</td>
                <td>` +
                customer.Address +
                `</td>
                  <td>` +
                customer.PhoneNumber +
                `</td>
              </tr>`
            );
          });
        } else {
          console.log("No ok");
        }
      });
    }

    loadCustomer();

    $("#hinhsp").change(function () {
      var data = new FormData();
      jQuery.each(jQuery("#hinhsp")[0].files, function (i, file) {
        data.append("hinhdaidien", file);
      });

      jQuery.ajax({
        url: url + "/uploadFile",
        data: data,
        cache: false,
        contentType: false,
        processData: false,
        method: "POST",
        type: "POST", // For jQuery < 1.9
        success: function (data) {
          if (data.kq == 1) {
            //console.log(data);
            $("#file_ImageCustomer").val(data.urlFile.filename);
            $("#ImgCustomerNew").attr(
              "src",
              url + `/upload/` + data.urlFile.filename
            );
          } else {
            alert("Upload fail!");
          }
        },
      });
    });

    $("#hinhsp_Detail").change(function () {
      var data = new FormData();
      jQuery.each(jQuery("#hinhsp_Detail")[0].files, function (i, file) {
        //console.log("hinhdaidien");
        data.append("hinhdaidien", file);
      });

      jQuery.ajax({
        url: url + "/uploadFile",
        data: data,
        cache: false,
        contentType: false,
        processData: false,
        method: "POST",
        type: "POST", // For jQuery < 1.9
        success: function (data) {
          if (data.kq == 1) {
            //console.log(data);
            //$("#imgAvatar").attr("src","upload/" + data.file);
            $("#product_Detail").attr(
              "src",
              url + `/upload/` + data.urlFile.filename
            );
            $("#file_ImageCustomer_Details").val(data.urlFile.filename);
          } else {
            console.log("Upload fail!");
          }
        },
      });
    });

    $("#btn_Add_New_Customer").click(function () {
      if (
        $("#customerName").val().length == 0 ||
        $("#file_ImageCustomer").val().length == 0
      ) {
        alert("Vui lòng nhập tên và chọn hình");
      } else {
        $.post(
          url + "/register",
          {
            Username: $("#customerUsername").val(),
            Password: $("#customerPassword").val(),
            Name: $("#customerName").val(),
            Image: $("#file_ImageCustomer").val(),
            Email: $("#customerEmail").val(),
            Address: $("#customerAddress").val(),
            PhoneNumber: $("#customerPhoneNumber").val(),
          },
          function (data) {
            ///console.log(data);
            if (data.kq == 1) {
              loadCustomer();
            } else {
              console.log("No ok");
            }
          }
        );
      }
    });
  });
</script>
